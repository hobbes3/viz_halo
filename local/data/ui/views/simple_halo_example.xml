<dashboard>
  <label>Simple Halo Example</label>
  <search id="base">
    <query>| inputlookup simple_halo_data.csv | eval outer_link=replace("https://www.mariowiki.com/".outer, " ", "_") | eval inner_link=replace("https://www.mariowiki.com/".inner, " ", "_")</query>
  </search>
  <row>
    <panel>
      <title>The Mario Universe</title>
      <viz type="viz_halo.halo">
        <title>With auto transition set to "resume" (will resume after 5 seconds of user inactivity)</title>
        <search base="base"></search>
        <option name="viz_halo.halo.auto_transition">resume</option>
        <option name="viz_halo.halo.auto_transition_sleep">3000</option>
        <option name="viz_halo.halo.draggable">on</option>
        <option name="viz_halo.halo.label_font_size">15</option>
        <option name="viz_halo.halo.outer_colors">schemePastel1</option>
        <option name="viz_halo.halo.width">700</option>
      </viz>
    </panel>
  </row>
  <row>
    <panel>
      <title>Source data</title>
      <table>
        <search base="base"></search>
        <option name="count">50</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
</dashboard>